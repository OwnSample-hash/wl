{{define "card"}}
<div class="max-w-sm mt-4 rounded shadow-lg bg-gray-800 ml-auto mr-auto px-4">
  <img class="w-full pt-4 rounded-xl" src="/static/img/{{.ID}}.jpg" alt="Use /static/img/{{.ID}}.jpg" />
  <div class="px-4 py-4">
    <div class="font-bold text-xl mb-2">{{.Name}}</div>
    <div class="text-white text-base">
      <h5 class="text-lg font-bold">Desc:</h5>
      {{.Description}}
    </div>
    <div>
      <div>
        <h5 class="text-lg font-bold">Price: â‚¬</h5>
      </div>
      <div>
        {{if .Discount}}
        <div class="flex items-center space-x-2">
          <div class="line-through text-gray-500" data-tooltip-target="tooltip-bottom-{{.ID}}"
            data-tooltip-placement="bottom">
            {{if .PricePerMonth}}{{.PricePerMonth}}{{ end}}
            {{if and .PricePerMonth .Price}} / {{ end }}
            {{if .Price}}{{.Price}}{{ end }}
          </div>
          <div class="text-green-500" data-tooltip-target="tooltip-bottom-{{.ID}}" data-tooltip-placement="bottom">
            {{if .DiscountedMonthlyPrice}}{{.DiscountedMonthlyPrice}}{{ end }}
            {{if and .DiscountedMonthlyPrice .DiscountPrice}} / {{ end }}
            {{if .DiscountPrice}}{{.DiscountPrice}}{{ end }}
          </div>
        </div>
        <div id="tooltip-bottom-{{.ID}}" role="tooltip"
          class="absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-white bg-gray-900 rounded-lg shadow-sm opacity-0 tooltip dark:bg-gray-700">
          <div>
            {{if .PricePerMonth}}Monthly{{ end}}
            {{if and .PricePerMonth .Price}} / {{ end }}
            {{if .Price}}Lifetime{{ end }}
          </div>
            <div class="text-green-500">
              Discount: {{.Discount}}%
            </div>
          <div class="tooltip-arrow" data-popper-arrow></div>
        </div>
        {{else}}
        <a data-tooltip-target="tooltip-bottom-{{.ID}}" data-tooltip-placement="bottom" type="button">
          {{if .PricePerMonth}}{{.PricePerMonth}}{{ end}}
          {{if and .PricePerMonth .Price}} / {{ end }}
          {{if .Price}}{{.Price}}{{ end }}
        </a>
        <div id="tooltip-bottom-{{.ID}}" role="tooltip"
          class="absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-white bg-gray-900 rounded-lg shadow-sm opacity-0 tooltip dark:bg-gray-700">
          {{if .PricePerMonth}}Monthly{{ end}}
          {{if and .PricePerMonth .Price}} / {{ end }}
          {{if .Price}}Lifetime{{ end }}
          <div class="tooltip-arrow" data-popper-arrow></div>
        </div>
        {{end}}
      </div>
    </div>
  </div>
  <div class="flex items-end justify-between px-4">
    <div>
      <label for="lenght{{.ID}}"></label>
      <select name="lenght-{{.ID}}" id="lenght " class="select lenght-{{.ID}}">
        {{if .OneMonth}}<option value="one_month">One Month</option>{{end}}
        {{if .LifeTime}}<option value="life_time">Life Time</option>{{end}}
      </select>
    </div>
    {{if eq .Path "/"}}
    <button type="button" class="green-btn" data-modal-target="modal-{{.ID}}" data-modal-toggle="modal-{{.ID}}"
      onclick="showPrice($('#modal-{{.ID}}-price'), $('.lenght-{{.ID}}').val(), '{{.PricePerMonth}}', '{{.Price}}')">
      <svg width="24px" height="24px" viewBox="-0.5 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path
          d="M18.5996 21.57C19.7042 21.57 20.5996 20.6746 20.5996 19.57C20.5996 18.4654 19.7042 17.57 18.5996 17.57C17.495 17.57 16.5996 18.4654 16.5996 19.57C16.5996 20.6746 17.495 21.57 18.5996 21.57Z"
          stroke="#ffffff" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
        <path
          d="M8.59961 21.57C9.70418 21.57 10.5996 20.6746 10.5996 19.57C10.5996 18.4654 9.70418 17.57 8.59961 17.57C7.49504 17.57 6.59961 18.4654 6.59961 19.57C6.59961 20.6746 7.49504 21.57 8.59961 21.57Z"
          stroke="#ffffff" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
        <path
          d="M2 3.55997C2 3.55997 6.64 3.49997 6 7.55997L5.31006 11.62C5.20774 12.1068 5.21778 12.6105 5.33954 13.0929C5.46129 13.5752 5.69152 14.0234 6.01263 14.4034C6.33375 14.7833 6.73733 15.0849 7.19263 15.2854C7.64793 15.4858 8.14294 15.5797 8.64001 15.56H16.64C17.7479 15.5271 18.8119 15.1196 19.6583 14.404C20.5046 13.6884 21.0834 12.7069 21.3 11.62L21.9901 7.50998C22.0993 7.0177 22.0939 6.50689 21.9744 6.017C21.8548 5.52712 21.6242 5.07126 21.3005 4.68467C20.9767 4.29807 20.5684 3.99107 20.1071 3.78739C19.6458 3.58371 19.1438 3.48881 18.64 3.50998H9.94"
          stroke="#ffffff" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
      </svg>
    </button>
    {{template "buy-modal" .}}
    {{end}}
    {{if eq .Path "/admin/"}}
    <button type="button"
      class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
      onclick="$.ajax({method: 'DELETE', url: '/admin/products/{{.ID}}', success: function(){location.reload()}, error: function(err){alert(err)}})">
      <svg width="24px" height="24px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M3 6.98996C8.81444 4.87965 15.1856 4.87965 21 6.98996" stroke="#ffffff" stroke-width="1.5"
          stroke-linecap="round" stroke-linejoin="round" />
        <path
          d="M8.00977 5.71997C8.00977 4.6591 8.43119 3.64175 9.18134 2.8916C9.93148 2.14146 10.9489 1.71997 12.0098 1.71997C13.0706 1.71997 14.0881 2.14146 14.8382 2.8916C15.5883 3.64175 16.0098 4.6591 16.0098 5.71997"
          stroke="#ffffff" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
        <path d="M12 13V18" stroke="#ffffff" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
        <path
          d="M19 9.98999L18.33 17.99C18.2225 19.071 17.7225 20.0751 16.9246 20.8123C16.1266 21.5494 15.0861 21.9684 14 21.99H10C8.91389 21.9684 7.87336 21.5494 7.07541 20.8123C6.27745 20.0751 5.77745 19.071 5.67001 17.99L5 9.98999"
          stroke="#ffffff" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
      </svg>
    </button>
    <button type="button"
      class="bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
      onclick="editThis('{{.ID}}', '{{.Name}}', '{{.Description}}', '{{.OneMonth}}', '{{.LifeTime}}', '{{.PricePerMonth}}', '{{.Price}}', '{{.Discount}}')">
      <svg width="24" height="24px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path
          d="M20.1498 7.93997L8.27978 19.81C7.21978 20.88 4.04977 21.3699 3.32977 20.6599C2.60977 19.9499 3.11978 16.78 4.17978 15.71L16.0498 3.84C16.5979 3.31801 17.3283 3.03097 18.0851 3.04019C18.842 3.04942 19.5652 3.35418 20.1004 3.88938C20.6356 4.42457 20.9403 5.14781 20.9496 5.90463C20.9588 6.66146 20.6718 7.39189 20.1498 7.93997V7.93997Z"
          stroke="#ffffff" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
      </svg>
    </button>
    {{end}}
  </div>
  <div class="px-4 py-4">
    <span class="time">Created at: {{.FormattedCreatedAt}}</span>
    <span class="time">Last updated at: {{.FormattedUpdatedAt}}</span>
  </div>
</div>
{{end}}
